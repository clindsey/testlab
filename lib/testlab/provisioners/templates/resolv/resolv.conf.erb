<% if !@resolv[:domain].nil? -%>
domain <%= @resolv[:domain] %>
<% end -%>
<% if !@resolv[:search].nil? -%>
search <%= @resolv[:search].flatten.compact.uniq.join(' ') %>
<% end -%>
<% if !@resolv[:servers].nil? -%>
<% @resolv[:servers].flatten.compact.uniq.each do |server| -%>
nameserver <%= server %>
<% end -%>
<% end -%>
